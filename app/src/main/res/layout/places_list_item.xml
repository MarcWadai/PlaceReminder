<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner">

    <ImageView
        android:id="@+id/iconPlace"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_empty_picture"
        android:layout_centerVertical="true" />

    <TextView

        android:id="@+id/titlePlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:textSize="27sp"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center"
        android:layout_toRightOf="@+id/iconPlace"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textAdresse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rue du jesaispas quoi"
        android:id="@+id/textAdresse"
        android:textSize="20sp"
        android:textStyle="italic"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/titlePlaces"
        android:layout_alignStart="@+id/titlePlaces"
        android:gravity="center_vertical|center"
        android:layout_below="@+id/iconPlace" />

</RelativeLayout>